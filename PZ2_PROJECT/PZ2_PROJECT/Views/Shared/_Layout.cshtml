@using Microsoft.AspNetCore.Http
@{
    var id = Context.Session.GetString("Id");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - PZ2_PROJECT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/PZ2_PROJECT.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PZ2_PROJECT</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    @if (id != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/User">User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Opinion">Opinion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Movie">Movie</a>
                        </li>
                    }


                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - PZ2_PROJECT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-black" id="loginModalLabel">Logowanie</h5> <!-- Zmieniono kolor na czarny -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 class="text-center text-black">Logowanie</h6> <!-- Zmieniono kolor na czarny -->
                <form method="post" action="/Account/Login">
                    <table class="table table-borderless">
                        <tr>
                            <td>Login:</td>
                            <td>
                                <input type="text" class="form-control" id="loginUsername" name="Username" placeholder="Shrek" required>
                            </td>
                        </tr>
                        <tr>
                            <td>Hasło:</td>
                            <td>
                                <input type="password" class="form-control" id="loginPassword" name="Password" required>
                            </td>
                        </tr>
                    </table>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Logowanie</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <p>Nie masz konta? <a href="#" data-bs-toggle="modal" data-bs-target="#registerModal" data-bs-dismiss="modal">Zarejestruj się tutaj</a>.</p>
            </div>
        </div>
    </div>
</div>

<!-- Register Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-black" id="registerModalLabel">Zarejestruj się</h5> <!-- Zmieniono kolor na czarny -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 class="text-center text-black">Rejestracja</h6> <!-- Zmieniono kolor na czarny -->
                <form method="post" action="/Account/Register">
                    <table class="table table-borderless">
                        <tr>
                            <td>Nazwa użytkownika:</td>
                            <td>
                                <input type="text" class="form-control" id="registerUsername" name="Username" placeholder="Shrek" required>
                            </td>
                        </tr>
                        <tr>
                            <td>Hasło:</td>
                            <td>
                                <input type="password" class="form-control" id="registerPassword" name="Password" required>
                            </td>
                        </tr>
                        <tr>
                            <td>Potwierdź hasło:</td>
                            <td>
                                <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" required>
                            </td>
                        </tr>
                    </table>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Zarejestruj się</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Powrót do logowania</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
